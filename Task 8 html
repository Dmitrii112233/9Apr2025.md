<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Task 8</title>
</head>
<body>

  <button id="startButton">Start Loading</button>
  <div id="progressWrapper" style="width: 100%; background-color: #ccc; height: 30px; margin-top: 10px;">
    <div id="progressBar" style="width: 0; background-color: #4caf50; height: 100%;"></div>
  </div>
  <p id="statusText">Progress: 0%</p>

  <script>
    function startLoading() {
      let progress = 0;
      const bar = document.getElementById('progressBar');
      const text = document.getElementById('statusText');

      const interval = setInterval(() => {
        if (progress >= 100) {
          clearInterval(interval);
        } else {
          progress++;
          bar.style.width = progress + '%';
          text.textContent = `Progress: ${progress}%`;
        }
      }, 20);
    }

    document.getElementById('startButton').addEventListener('click', startLoading);
  </script>

</body>
</html>
